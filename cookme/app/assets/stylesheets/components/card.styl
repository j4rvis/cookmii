.card--container
  display flex
  flex-flow row wrap
.card--layout
  margin 10px 10px 0 0
  width 300px
  height 250px
  background white
  box-shadow 0 2px 0 #ccc
  border-radius 10px
  padding 10px
.card--image-container
  position relative
  width 100%
  height 150px
  border-top-left-radius 10px
  border-top-right-radius 10px
  overflow hidden
  text-align center
  img
    left 0
    position absolute
    z-index 0
    background-size 100% auto
    background-position-y center
    width 100%
    height 100%
    box-shadow inset 10px 10px 100px rgba(0,0,0,.6)
  .card--fav-button
    z-index 1
    position absolute
    width 50px
    height 70px
    top 0
    right 0
    background $green
    // line-height 60px
    border-bottom-left-radius 10px
    .fa-star
      position absolute
      top 10px
      left 0
      right 0
      margin 0 auto
      // If favorite
      // color $orange
      color white
      font-size 3rem
    .card--fav-count
      position absolute
      padding 10px
      bottom 0
      left 0
      right 0
      color white
