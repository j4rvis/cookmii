.recipe
  display flex
  flex-direction column
  flex-wrap wrap
  width 100%
.recipe--container-first
  .recipe--title,
  .recipe--categories,
  .recipe--author
    padding 0 10px
  order 1
.recipe--container-second
  padding 0 10px
  order 2
.recipe--container-third
  padding 0 10px
  order 3
.recipe--categories
  padding 0
  list-style none
  display flex
  flex-direction row
  li
    font-style italic
    font-size 0.75em
    margin-right 10px
  li:last
    margin-right 0
.recipe--image
  width 100%
  height 600px
  overflow hidden
  text-align center
  img
    background-size 100% auto
    background-position-y center
    width 100%
    height 100%
    box-shadow inset 10px 10px 100px rgba(0,0,0,.6)

@media desktop
  .recipe
    flex-direction row
  .recipe--container-first
    .recipe--title,
    .recipe--categories,
    .recipe--author
      padding 0
    min-width 400px
    max-height 400px
    flex 1
  .recipe--container-second
    padding 0
    min-width 350px
    max-height 400px
    padding-left 20px
    overflow-y auto
    flex 1
  .recipe--container-third
    padding 0
    min-width 400px
  .recipe--categories
    li
      font-size 1.25em
      margin-right 20px
  .recipe--image
    margin-top 20px
    width 400px
    height 250px
  /*.recipe--ingredients*/

#container
  width 100%
  height 80%
  height 480px
  .item
    padding 10px
    background $green
    width 180px
    height 130px
