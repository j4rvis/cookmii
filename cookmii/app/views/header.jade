  //- .header--icon
  //-   .fa.fa-user
  .header--user
    .header--user-image
      - if(user)
        a(href="/#{user.local.username}/profile")
          img(style="background-image:url(https://farm4.staticflickr.com/3847/15207650967_c26783888c_o.jpg);")
    .header--user-actions
      -if(user)
        a(href="/#{user.local.username}/profile") Profil
        a(href="/logout") Logout
      -else
        a(href="/signup") Signup
        a(href="/login") Login
