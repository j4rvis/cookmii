.recipe
  display flex
  flex-direction column
  flex-wrap wrap
  width 100%
.recipe--container-first
  .recipe--title,
  .recipe--categories,
  .recipe--author
    padding 0 10px
  order 1
.recipe--container-second
  @media desktop
    padding 0 10px
  order 2
.recipe--container-third
  padding 0 10px
  order 3
.recipe--categories
  padding 0
  list-style none
  display flex
  flex-direction row
  li
    font-style italic
    font-size 0.75em
    margin-right 10px
  li:last
    margin-right 0
.recipe--image
  width 100%
  height 600px
  overflow hidden
  text-align center
  img
    background-size 100% auto
    background-position-y center
    width 100%
    height 100%
    box-shadow inset 10px 10px 100px rgba(0,0,0,.6)

@media desktop
  .recipe
    flex-direction row
  .recipe--container-first
    .recipe--title,
    .recipe--categories,
    .recipe--author
      padding 0
    min-width 400px
    max-height 400px
    flex 1
  .recipe--container-second
    padding 0
    min-width 350px
    max-height 400px
    padding-left 20px
    overflow-y auto
    flex 1
  .recipe--container-third
    padding 0
    min-width 400px
  .recipe--categories
    li
      font-size 1.25em
      margin-right 20px
  .recipe--image
    margin-top 20px
    width 400px
    height 250px
  /*.recipe--ingredients*/

#container
  width 100%
  height 80%
  height 480px
  .item
    padding 10px
    background $green
    width 180px
    height 130px

.recipe--input
  display flex
  flex-direction row
  margin-bottom 20px
  label
    display none
  input, .textarea
    color black
    margin 10px 2%
    font-size 5rem
    @media mobile
      width 96%
    border 0
    border-bottom 5px solid $grey
    background $grey-light
    &:focus
      border-box 0
      border 0
      border-bottom 5px solid $orange
      outline-offset 0
      outline 0
  input
    height 150px
  .textarea
    display inline-block
    min-height 130px
    &[contenteditable=true]:empty:before
      content attr(placeholder)
      color $grey
    
@media desktop
  .recipe--input
    label
      display block
      flex 2.5
    input, .textarea
      flex 7.5
      margin 0
      font-size 1rem
      border-bottom 2px solid $grey
      &:focus
        border-bottom 2px solid $orange
    input
      height 30px
    .textarea
      min-height 30px
      