.header--logo
  padding 15px 0 0 20px
  line-height 40px
  width 150px
  font-size 1.7em
  text-decoration none
  color white
  @media desktop
    float left
  .fa-spoon
    font-size 1em
    float left
  @media mobile
    position absolute
    right 0
    left 0
    margin 0 auto
    padding 0
    width 550px
    line-height 200px
    .fa-spoon
      padding-top 40px
.header--navigation-button
.header--user-button
  display: none
  @media mobile
    display block
    color $green-dark
    font-size 1.5em
    position absolute
    height 100px
    top 0
    bottom 0
    margin auto 0
    &.header--navigation-button
      left 40px
    &.header--user-button
      right 40px

.header--navigation
  font-size 1.25em
  margin-left 50px
  float left
  list-style none
  li
    @media desktop
      float left
    padding 10px
    margin 10px 10px 10px 0
    border-radius 10px
    &:hover
      cursor pointer
      background $green-light
  @media mobile
    position absolute
    top 190px
    left -5%
    display none
    width 10%
    height 100vh
    background $orange
.header--user
  margin-top 15px
  height 70px
  float right
  width 250px
  .header--user-image
    margin-right 20px
    float left
    width 40px
    height 40px
    background red
  .header--user-name
    line-height 40px
    margin-right 20px
    @media desktop
      float left
    @media mobile
      width 200px
      margin 20px auto
    color white
  .header--user-actions
    @media desktop
      float right
    line-height 40px
    margin-right 20px
    @media mobile
      text-align center
      width 300px
      margin 0 auto
      a
        margin 20px
    a
      margin-right 10px
  @media mobile
    display none
    position absolute
    top 180px
    right -5%
    width 10%
    height 100vh
    background $orange