.card--container
  display flex
  flex-flow row wrap
  justify-content space-around
.card--layout
  background white
  margin-bottom 25px
  width 350px
  height 250px
  // box-shadow 0 2px 0 #ccc
  box-shadow: 0 2px 8px 0 rgba(0,0,0,.25);
  border-radius 2px
.card--image-container
  position relative
  width 100%
  height 150px
  overflow hidden
  text-align center
  a
    img
      left 0
      position absolute
      z-index 0
      background-size 100% auto
      background-repeat no-repeat
      background-position center
      width 100%
      height 100%
      transition all 0.2s ease
      &:hover
        transform scale(1.2)
  .card--fav-button
    z-index 1
    position absolute
    width 50px
    height 70px
    top 0
    right 0
    background $green
    border-bottom-left-radius 10px
    .fa-star
      position absolute
      top 10px
      left 0
      right 0
      margin 0 auto
      color white
      font-size 1.5em
      &:hover
        color orange
        cursor pointer
    .card--fav-count
      font-size 1em
      margin-top 10px
      position absolute
      padding 10px
      bottom 0
      left 0
      right 0
      color white
.card--title
  color black
  font-size 1em
  padding 16px
