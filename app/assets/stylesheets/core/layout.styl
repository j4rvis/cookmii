body
  background #EEE
  font-family 'Roboto-Regular', Arial, sans-serif
  margin 0
  padding 0
  height 100%
  width 100%
  font-size 18px
  @media mobile
    font-size 70px

header
  width 100%
  height 70px
  background #FFA000
  position fixed
  top 0
  z-index 20
  box-shadow 0 2px 5px rgba(0,0,0,0.26)
  @media mobile
    height 200px

main
  margin 70px auto 0 auto
  width 1000px
  padding 20px
  @media mobile
    height 200px
    margin 200px 0 50px 0
    width 100%



