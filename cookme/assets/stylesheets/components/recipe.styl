.recipe
  display flex
  flex-direction column
  flex-wrap wrap
  width 100%
.recipe--container-first
  order 1
.recipe--container-second
  order 2
.recipe--container-third
  order 3
.recipe--categories
  padding 0
  list-style none
  display flex
  flex-direction row
  li
    font-style italic
    font-size 0.75em
    margin-right 10px
  li:last
    margin-right 0
.recipe--image

  width 100%
  height 600px
  overflow hidden
  text-align center
  img
    background-size 100% auto
    background-position-y center
    width 100%
    height 100%
    box-shadow inset 10px 10px 100px rgba(0,0,0,.6)

@media desktop
  .recipe
    display flex
    flex-direction row
    flex-wrap wrap
    width 100%
  .recipe--container-first
    min-width 400px
    max-height 400px
    flex 1
    order 1
  .recipe--container-second
    min-width 350px
    max-height 400px
    padding-left 20px
    overflow-y auto
    flex 1
    order 2
  .recipe--container-third
    min-width 400px
    order 3
  .recipe--categories
    padding 0
    list-style none
    display flex
    flex-direction row
    li
      font-style italic
      font-size 1.25em
      margin-right 20px
    li:last
      margin-right 0
  .recipe--image
    margin-top 20px
    width 400px
    height 250px
    overflow hidden
    text-align center
    img
      background-size 100% auto
      background-position-y center
      width 100%
      height 100%
      box-shadow inset 10px 10px 100px rgba(0,0,0,.6)
  /*.recipe--ingredients*/